%commando om klas in te voeren
\newcommand{\klas}[1]{\def\@klas{#1}}

%commando om
\newcommand{\filetitle}[1]{\def\@extratitlestuff{#1}}

%lengtes voor titelpagina
\newlength{\logowidth}
\setlength{\logowidth}{5cm}

%commando om titelpagina te maken
\renewcommand{\maketitle}{
  \thispagestyle{empty}
  % \leavevmode%
  \vskip -2cm
  \begin{tabular}{cc}
    \begin{minipage}{\logowidth}
        \includegraphics[width = \logowidth]{style/logo_LRIO}
      \end{minipage} &
  \end{tabular}
  \vskip \stretch{3}%
  \noindent
  \rule{\textwidth}{2pt}
  \vskip 0.75em%
  \begin{center}
    {\Huge\textbf \@title \par}%
  \end{center}
  \vskip 0.75em%
  \noindent%
  \rule{\textwidth}{2pt}%
  \ifdefined\@extratitlestuff
    \vskip 0.75em%
    \begin{center}
    \@extratitlestuff
  \end{center}
  \fi
  \vskip \stretch{3}%
  \hfill  \@author\par%
  \vskip 0.5em%
  \hfill  \@date%
  \vskip \stretch{1}%
  \setcounter{page}{1}%
  \normalfont
}

%instellen header en footer, met package fancyhdr
\pagestyle{fancy}
\addtolength{\headheight}{30pt}
\renewcommand{\headrulewidth}{0.5pt}
\renewcommand{\footrulewidth}{0.5pt}
\fancyhead{}
\fancyhead[L0]{\footnotesize\includegraphics[width=2cm]{style/logo_LRIO}}
\fancyhead[RO]{\rule[-2.5ex]{0pt}{2.5ex}\footnotesize \@extratitlestuff}
\fancyfoot{}
\fancyfoot[LO]{\rule[1.5ex]{0pt}{1.5ex}\footnotesize \@author}
\fancyfoot[RO]{\rule[1.5ex]{0pt}{1.5ex}\footnotesize \thepage/\pageref*{LastPage}}


